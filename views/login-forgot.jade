extends layouts/form

block content
  a(href=config.siteOrigin)
    include includes/birdy-point
  h1 Reset Your Password
  h2 Regain access to your Study Notes account.

  if (locals.errors.length)
    .errors
      each msg in errors
        div= msg

  form.login-forgot(method='POST')
    input(type='hidden', name='_csrf', value=csrf)
    .row
      input(
        name='email',
        type='email',
        placeholder='email',
        value=email,
        autofocus=!email,
        required
      )
    .row.submit
      button.btn.large(type='submit') Reset Password

block footer
  span Looking to <a href="/login/">log in</a> instead?
