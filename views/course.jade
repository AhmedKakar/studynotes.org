extends layouts/main-sidebar

append sidebar
  include includes/ads/adsense-rect
  include includes/countdown
  include includes/ads/adsense-rect
  h2 #{ course.name } Stats
  ul
    li Exam Date: #{ moment(course.examDate).format("MMMM Do, YYYY") }
    li #{ util.addCommas(course.hits) } views
    li.online

block content
  h1 #{course.name} Notes
  include includes/toolbar

  include includes/ads/adsense-inline-rect

  if (course.notetypes)
    each notetype in course.notetypes
      h2: a(href='#{notetype.url}')= notetype.name
      p.desc!= notetype.shortDesc
