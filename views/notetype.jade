extends layouts/main-sidebar

append sidebar
  include includes/ads/adsense-rect
  include includes/countdown
  include includes/ads/adsense-rect
  h2 #{ course.name } #{ notetype.name } Stats
  ul
    li #{ util.addCommas(courseNotetype.hits) } views
    li.online

block content
  include includes/breadcrumbs
  h1= notetype.name
  include includes/toolbar

  include includes/ads/adsense-inline-rect

  - var desc = (notetype.desc || notetype.shortDesc).replace(/COURSE_SHORTNAME/g, course.shortName).replace(/COURSE_TEXTBOOK/g, course.textbook).replace(/COURSE/g, course.name)

  p!= desc

  if (locals.notes)
    ul.listing
      each note in notes
        li: a(href='#{note.url}')= note.name
