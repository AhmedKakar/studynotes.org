if (locals.hero)
  .hero
    a(href='#{hero.url || "."}')
      if (locals.notetype || locals.note)
        //- notetype and note pages already have a h1 in the content
        if (hero.titleRaw)
          h2.title!= hero.title
        else
          h2.title= hero.title
        if (locals.hero.desc)
          if (hero.descRaw)
            h3.desc!= hero.desc
          else
            h3.desc= hero.desc
      else
        if (hero.titleRaw)
          h1.title!= hero.title
        else
          h1.title= hero.title
        if (locals.hero.desc)
          if (hero.descRaw)
            h2.desc!= hero.desc
          else
            h2.desc= hero.desc

  if (hero.tabs && hero.tabs.length)
    ul.tabs.clearfix
      each tab in hero.tabs
        li(class='#{locals.notetype && tab.slug == notetype.slug ? "on" : ""}')
          a(href='#{tab.url}')= tab.name
        //- Force a space between tabs for inline-block spacing
        | #{ ' ' }