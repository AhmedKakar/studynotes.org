extends layouts/main-sidebar

block preconnect
  link(rel='preconnect', href='https://platform.twitter.com')
  link(rel='preconnect', href='https://cdn.api.twitter.com')
  link(rel='preconnect', href='https://p.twitter.com')

block head
  script(type='application/ld+json').
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "alternateName": "StudyNotes",
      "name": "Study Notes",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "#{ config.siteOrigin }/search/?q={query}",
        "query-input": "required name=query"
      },
      "url": "#{ config.siteOrigin }/"
    }

  script(type='application/ld+json').
    {
      "@context": "http://schema.org",
      "@type": "Organization",
      "logo": "#{ config.cdnOrigin }/images/logo-birdy.png",
      "name": "Study Notes",
      "sameAs": [
        "https://www.facebook.com/StudyNotesApp",
        "https://twitter.com/StudyNotesApp",
        "https://plus.google.com/+ApstudynotesOrg1"
      ],
      "url": "#{ config.siteOrigin }/"
    }

block scripts
  //- Twitter SDK (async)
  script.
    !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');

block sidebar
  p.onlineNum.hide-phone.hide-tablet
    span
    | #{ ' students online.' }

  div.hide-phone.hide-tablet
    a(class='twitter-timeline', href='https://twitter.com/StudyNotesApp', data-widget-id='382664807926624257') Tweets by @StudyNotesApp

  include ads/adsense-sidebar
  include ads/adsense-sidebar

  h3.hide-phone.hide-tablet Study Notes In Numbers
  ul.hide-phone.hide-tablet
    li #{ util.addCommas(noteCount) } notes for #{ courseCount } <a href='/courses/'>AP courses</a>
    li #{ util.addCommas(essayCount) } admissions essays for #{ collegeCount } <a href='/colleges/'>universities</a>
    li #{ util.addCommas(userCount) } registered users
    li
      span.totalHits Lots of
      | #{ ' views (whole site) ' }
    li.onlineNum
      span
      | #{ ' students online now (whole site)' }

block content
  h2 Free AP Notes and Study Tools
  p We have the best <strong>AP notes, chapter outlines, and study guides</strong> on the web — contributed by students and teachers like yourself. This site is used by <strong>millions across the U.S.</strong> to prepare for AP exams.

  .row
    .col2(style='width: 35%')
      h2 Pick an AP Class
      ul.tight
        each course in modelCache.coursesByName
          li: strong: a(href=course.url, title=course.shortName)= course.name
    .col2(style='width: 65%')
      h2 New Notes
      ul.tight
        each note in newNotes
          li
            a(href=note.url, title='#{ note.course.shortName } #{ note.notetype.singularName }: #{ note.name }')= note.name
            small.gray: em= ' ' + moment(note.createDate).fromNow()

  h2
    | Free Sample Admissions Essays
    a.btn.hide-phone(href='/submit/essay/')
      i.fa.fa-cloud-upload
      | Submit an essay

  p Learn how to write a powerful college application by studying <a href='/essays/'>our database</a> of <strong>#{ essayCount } successful admissions essays</strong>. The secrets aren't secret anymore — see what actually worked for top students.
  .row
    .col2
      h2 Pick a College
      .row
        .col2
          ul.tight
            each college in modelCache.collegesByName.slice(0, 13)
              li: strong: a(href=college.url)= college.shortName
        .col2
          ul.tight
            each college in modelCache.collegesByName.slice(13, 26)
              li: strong: a(href=college.url)= college.shortName
    .col2
      h2 New College Essays
      ul.tight
        each essay in newEssays.slice(0, 16)
          li
            a(href=essay.url)= ' ' + essay.name
            small.gray: em= ' ' + moment(essay.createDate).fromNow()

  .row
    .col2
      h2 Our <strong>free AP notes</strong> include
      ul
        li course guides
        li chapter outlines
        li topic outlines
        li vocabulary &amp; key terms
        li important historical documents
        li biographies
        li timelines
        li practice quizzes
        li practice tests

    .col2
      h2 Many <strong>AP courses</strong> coming soon
      ul
        li AP Art History
        li AP Biology (AP Bio)
        li AP Calculus (AB &amp; BC)
        li AP Chemistry (AP Chem)
        li AP Chinese Language and Culture
        li AP Comparative Government &amp; Politics
        li AP Computer Science A
        li AP Environmental Science
        li AP French Language and Culture
        li AP German Language and Culture
        li AP Human Geography
        li AP Italian Language and Culture
        li AP Japanese Language and Culture
        li AP Latin
        li AP Macroeconomics (AP Econ)
        li AP Music Theory
        li AP Physics (B &amp; C)
        li AP Spanish Language
        li AP Spanish Literature and Culture
        li AP Statistics (AP Stats)
        li AP Studio Art
