@keyframes pulse
  0%
    transform: scale(1)
  50%
    transform: scale(1.1)
.pulse
  animation: pulse both 0.5s

@keyframes birdy-bird
  0%
    transform: translate(0, 0)
  50%
    transform: translate(0, 5px)
.birdy-bird
  animation: birdy-bird both 3s infinite

@keyframes birdy-shadow
  0%
    transform: scale(1)
  50%
    transform: scale(1.5)
.birdy-shadow
  animation: birdy-shadow both 3s infinite
