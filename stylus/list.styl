ul
  .content &:not(.listing)
    padding-left: 20px

  .row &:not(.listing)
    padding: 0 10px 0 0

  &.tight
    li
      ellipsis()
  &.more
    li
      ellipsis()
    a:visited
      color: BLUE_LIGHT

  li
    list-style-position: inside

  &.listing
    list-style: none
    margin-bottom: 25px

    li
      background: #EEE
      color: GRAY_DARKEST
      ellipsis()
      padding: 10px 25px
    li:nth-child(even)
      background: #FFF

    .content &
      font-weight: bold

.entry
  margin-bottom: 1.5em

  .heading
    width: 100%

    h3
      float: left

    .author, .college
      float: right
      position: relative
      top: -5px

      a
        {LINK}
          color: GRAY_DARKEST
        {HOVER}
          color: BLUE_DARK

      span
        float: left
        margin-top: 7px

      img
        float: right
        height: 40px
        margin: 0 0 0 10px
        width: 40px

    .author img
      border-radius: 20px
      box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.35)

  .body
    clear: left

    .read-more
      margin-left: 5px

  p
    display: inline
    margin-right: 5px