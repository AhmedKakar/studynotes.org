ul, ol
  margin: 0 0 1.5em 2em
  padding: 0

  // no margin between nested lists
  ul, ol
    margin-top: 0.75em
    margin-bottom: 0.75em

  &.tight
    margin-left: 0
    li
      ellipsis()
  &.more
    li
      ellipsis()
    a:visited
      color: BLUE_LIGHT

  &.listing
    list-style: none
    margin-left: 0

    li
      background: #EEE
      color: GRAY_DARKEST
      ellipsis()
      padding: 10px 25px
    li:nth-child(even)
      background: #FFF

    .content &
      font-weight: bold

ul li
  list-style-position: inside

// APA-style lists
ol
  counter-reset: level1

  :not(li) > &
    margin-left: 0

  li
    list-style: none
  li:before
    content: counter(level1, upper-roman) ". "
    counter-increment: level1

  ol
    counter-reset: level2
    li:before
      content: counter(level2, upper-alpha) ". "
      counter-increment: level2

    ol
      counter-reset: level3
      li:before
        content: counter(level3, decimal) ". "
        counter-increment: level3

      ol
        counter-reset: level4
        li:before
          content: counter(level4, lower-alpha) ". "
          counter-increment: level4

        ol
          counter-reset: level5
          li:before
            content: "(" counter(level5, decimal) ") "
            counter-increment: level5

.entry
  margin-bottom: 1.5em

  .heading
    width: 100%

    h3
      float: left

    .author, .college
      float: right
      position: relative
      top: -5px

      a
        {LINK}
          color: GRAY_DARKEST
        {HOVER}
          color: BLUE_DARK

      span
        float: left
        margin-top: 7px

      img
        float: right
        height: 40px
        margin: 0 0 0 10px
        width: 40px

    .author img
      border-radius: 20px
      box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.35)

  .body
    clear: left

    .read-more
      margin-left: 5px

  p
    display: inline
    margin-right: 5px