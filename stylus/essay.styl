body.essay
  .prompt
    font-style: italic

  .body
    cursor: default
    position: relative
    user-select: none

    .blur :not(:first-child):not(:nth-child(2))
      color: rgba(255, 255, 255, 0)
      text-shadow: #000 0 0 9px

      .ie10 &, .ie11 &
        color: rgba(230, 230, 230, 0.6)

  .subscribe-on-blur
    // background: radial-gradient(rgba(255, 255, 255, 1) 40%, rgba(255, 255, 255, 0.1) 70%)
    background: BLUE_LIGHTER
    border-radius: 100px
    border: 3px solid BLUE
    left: 0
    margin-top: 150px
    padding: 50px
    position: absolute
    right: 0
    text-align: center
    top: 325px

    @media PHONE
      border-radius: 40px
      padding: 20px
    @media TABLET
      border-radius: 60px
      padding: 30px

    h4
      margin-bottom: 0
