body.essay
  .prompt
    font-style: italic

  .body
    cursor: default
    position: relative
    user-select: none

    .blur :not(:first-child):not(:nth-child(2))
      color: rgba(255, 255, 255, 0)
      text-shadow: #000 0 0 9px

      .ie10 &, .ie11 &
        color: rgba(230, 230, 230, 0.6)

  .subscribe-on-blur
    background: radial-gradient(rgba(255, 255, 255, 1) 40%, rgba(255, 255, 255, 0.1) 70%)
    left: 0
    padding: 150px 50px
    position: absolute
    right: 0
    text-align: center
    top: 300px

    @media PHONE
      padding: 150px 20px
    @media TABLET
      padding: 150px 30px