.btn, [type='submit']
  {LINK}, &
    background: BLUE
    border-radius: 3px
    border: 0
    box-shadow: 0 0 1px GRAY
    color: #FFF
    cursor: pointer
    font-size: 20px
    font-weight: bold
    padding: 4px 16px 3px 16px
    text-transform: uppercase

  {HOVER}
    background: BLUE_DARK
    text-decoration: none

  &.large
    font-size: 24px
    padding: 8px 20px 7px 20px

.breadcrumbs
  font-weight: bold
  text-transform: uppercase

  .divider:before
    content: '/'
    // content: '\2192'
    font-weight: bold
    margin: 0 12px