.btn, [type='submit']
  {LINK}, &
    background: BLUE
    border-radius: 3px
    border: 0
    box-shadow: 0 0 1px GRAY
    color: #FFF
    cursor: pointer
    font-size: 20px
    font-weight: bold
    padding: 4px 14px 3px 14px
    text-transform: uppercase

  {HOVER}
    background: BLUE_DARK
    text-decoration: none

  &.small
    font-size: 16px
    padding: 4px 9px 3px 9px

  &.large
    font-size: 24px
    padding: 8px 14px 7px 14px

.breadcrumbs
  font-weight: bold
  text-transform: uppercase

  .divider:before
    content: '/'
    // content: '\2192'
    font-weight: bold
    margin: 0 12px