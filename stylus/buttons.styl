.btn
  {LINK}, &
    background: BLUE
    border-radius: 3px
    border: 0
    color: #FFF
    cursor: pointer
    font-size: 18px
    font-weight: bold
    line-height: 1.8em
    padding: 1px 16px
    text-transform: uppercase

  {HOVER}
    background: BLUE_DARK
    text-decoration: none

  &.large
    padding: 5px 20px
    font-size: 22px

.breadcrumbs
  font-weight: bold
  text-transform: uppercase

  .divider:before
    content: '/'
    // content: '\2192'
    font-weight: bold
    margin: 0 12px