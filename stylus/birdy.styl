@keyframes birdy-bird
  0%
    transform: translate(0, 0)
  50%
    transform: translate(0, 6px)

@keyframes birdy-shadow
  0%
    transform: scale(1)
  50%
    transform: scale(1.3)

.birdy
  width: (387 / 2)px
  height: (285 / 2)px

  .bird
    animation: birdy-bird both 3s infinite

  .shadow
    animation: birdy-shadow both 3s infinite
    height: 20px
    width: 80px
    margin-left: 42px
    margin-top: 5px
