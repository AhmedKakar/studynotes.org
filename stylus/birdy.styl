@keyframes birdy-bird
  0%
    transform: translate(0, 0)
  50%
    transform: translate(0, 6px)

@keyframes birdy-shadow
  0%
    transform: scale(1)
  50%
    transform: scale(1.3)

.birdy
  margin-bottom: 50px

  .bird
    display: block
    animation: birdy-bird both 3s infinite

  .shadow
    display: block
    animation: birdy-shadow both 3s infinite
    height: 20px
    width: 80px
    margin-top: 10px

  &.birdy-point
    width: (387 / 2)px
    height: (285 / 2)px
    .shadow
      margin-left: 42px

  &.birdy-happy
    width: (459 / 2)px
    height: (420 / 2)px
    .shadow
      margin-left: 76px

  &.birdy-cute
    width: (444 / 2)px
    height: (285 / 2)px
    .shadow
      margin-left: 70px

