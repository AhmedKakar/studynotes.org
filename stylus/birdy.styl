@keyframes birdy-bird
  0%
    transform: translate(0, 0)
  50%
    transform: translate(0, 6px)

@keyframes birdy-shadow
  0%
    transform: scale(1)
  50%
    transform: scale(1.3)

.birdy
  margin-bottom: 50px

  .bird
    animation: birdy-bird both 3s infinite

  .shadow
    animation: birdy-shadow both 3s infinite
    height: 20px
    width: 80px
    margin-top: 4px

  &.birdy-point
    width: (387 / 2)px
    height: (285 / 2)px
    .shadow
      margin-left: 41px

  &.birdy-happy
    width: (459 / 2)px
    height: (420 / 2)px
    .shadow
      margin-left: 2px

