.browseWrapper
  background-color: #000
  position: fixed
  top: HEADER_HEIGHT
  width: 100%
  z-index: 50

  @media PHONE
    padding: 0 5px
  @media TABLET
    padding: 0 10px
  @media DESKTOP
    padding: 0 30px

.browse
  height: 0
  padding: 0
  overflow: hidden

  transform: translateZ(0)
  transition-property: padding, height
  transition-duration: .5s

  &.on
    height: BROWSE_MENU_HEIGHT
    padding: 30px 0

    transition-property: padding, height
    transition-duration: .5s

  & > li
    border-right: 1px solid GRAY_DARKER
    display: inline-block
    padding: 0 15px
    vertical-align: top
    width: 32%

    &:last-child
      border-right: 0

    h2
      font-size: 20px
      font-weight: bold
      margin-top: 0
      text-transform: uppercase

    li
      font-size: 16px
      list-style: none
      margin: 5px 0

  a
    {LINK}
      color: #FFF
      display: block
      ellipsis()
      width: 100%
    {HOVER}
      color: BLUE_LIGHT
