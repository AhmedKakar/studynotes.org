CONTENT_WIDTH = 600px

html.form
  .content
    margin: 80px auto 0 auto
    padding: 20px 90px
    position: relative
    width: CONTENT_WIDTH

  .corner
    height: 80px
    left: -40px
    position: absolute
    width: 80px
    top: -40px

    img
      border-radius: 6px
      box-shadow: 0px 1px 10px rgba(0, 0, 0, 0.35)

  h1, h2
    text-align: center

  h1
    border-bottom: 0
    font-weight: bold
    margin: 40px 0 10px 0
    padding: 0

  h2
    color: GRAY
    font-size: 20px
    margin: 10px 0

  form
    margin: 40px 0

  [type='submit']
    display: block
    margin: 40px auto

  input
    color: #000
    border: 3px solid GRAY_LIGHT
    border-radius: 25px
    display: block
    height: 50px
    font-size: 18px
    margin: 15px 0
    padding: 10px 15px
    width: 100%

    &:focus, &:active
      outline: 0
      border-color: BLUE

  ::-webkit-input-placeholder
    color: GRAY
  :-moz-placeholder
    color: GRAY
  :-ms-input-placeholder
    color: GRAY

  .errors
    font-weight: bold
    margin: 40px 0
    padding: 0

    li
      background-color: HAPPY_RED
      border-radius: 3px
      list-style: none
      margin: 5px 0
      padding: 10px

  footer
    color: GRAY_DARK
    font-size: 14px
    margin: 20px auto
    width: CONTENT_WIDTH
    text-align: center

    span:not(:last-child):after
      content: '\b7'
      padding: 0 5px

