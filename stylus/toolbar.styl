.ghost
  height: 56px
  width: 100%

.toolbar
  @extend .ghost
  background: #FFF
  border-top: 1px solid GRAY_LIGHTER
  border-bottom: 1px solid GRAY_LIGHTER
  margin-bottom: 20px
  z-index: 30

  &.sticky
    border-bottom: 1px solid GRAY_LIGHT
    box-shadow: 0 1px rgba(0, 0, 0, 0.05)
    position: fixed
    top: 0

  .twitter-share-button
    float: left
    margin-top: 13px

  .fb-like
    float: left
    margin-top: 15px

  .navigate-msg
    color: GRAY_DARK
    float: right
    font-size: 14px
    font-style: italic
    margin: 18px 15px 0 0

  a.next
    {LINK}
      float: right
      margin-top: 10px