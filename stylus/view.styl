// View-specific styles

body.home
  .birdy
    float: left
    margin-top: -10px
    margin-right: 30px
    transform: scale(0.85)

    @media PHONE
      display: none

  .hero .totalHits
    display: inline-block
    @media TABLET
      min-width: 185px
    @media DESKTOP
      min-width: 195px

  .content .row
    h3
      ellipsis()
    li
      margin-bottom: 0

.da
  .content &
    @media PHONE
      margin-left: -1 * CONTENT_PADDING_PHONE
      margin-right: -1 * CONTENT_PADDING_PHONE
      margin-bottom: 10px
      text-align: center
  .sidebar &
    text-align: center
    margin: 0 0 1em 0
    @media PHONE
      margin-bottom: 20px
  img
    margin-bottom: 0
  *
    margin-left: auto
    margin-right: auto

body.essay
  .prompt
    font-style: italic

  .body
    cursor: default
    position: relative
    user-select: none

    .blur :not(:first-child):not(:nth-child(2))
      color: rgba(255, 255, 255, 0)
      text-shadow: #000 0 0 9px

      .ie10 &, .ie11 &
        color: rgba(230, 230, 230, 0.6)

  .subscribe-on-blur
    // background: radial-gradient(rgba(255, 255, 255, 1) 40%, rgba(255, 255, 255, 0.1) 70%)
    background: BLUE_LIGHTER
    border-radius: 100px
    border: 3px solid BLUE
    left: 0
    margin-top: 150px
    padding: 50px
    position: absolute
    right: 0
    text-align: center
    top: 325px

    @media PHONE
      border-radius: 40px
      padding: 20px
    @media TABLET
      border-radius: 60px
      padding: 30px

    h4
      margin-bottom: 0

body.signup, body.signup2
  background: center center url('https://cdn.apstudynotes.org/images/hero/colleges.jpg') no-repeat fixed
  background-size: cover

body.login, body.login-forgot, body.login-reset
  background: center center url('https://cdn.apstudynotes.org/images/hero/amjed-full.jpg') no-repeat fixed
  background-size: cover
