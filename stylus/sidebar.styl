.sidebar
  color: GRAY_DARK
  float: right
  margin-top: 0px
  position: relative
  width: SIDEBAR_WIDTH

  body.course &, body.notetype &, body.note &
    margin-top: -200px

  @media PHONE
    float: none
    margin-top: 20px !important
    padding: 20px
    text-align: center
    width: 100%

  & > div
    margin: 0 0 2em 0
  & > div.da
    margin: 0 0 1em 0
    min-height: 300px
  img
    margin-bottom: 0

  h1, h2, h3, h4, h5
    color: #000
    font-family: BODY_FONT
    margin-bottom: 0.7em

  div > h1, div > h2, div > h3, div > h4, div > h5
    &:last-child
      margin-bottom: 0

  ul, ol
    color: GRAY_DARKER
    li
      ellipsis()
      list-style-position: inside

  .online
    display: none

.countdown
  color: GRAY_DARKEST

  .time
    margin-bottom: 1.5em
    float: left
    width: 25%

    div
      font-size: 35px
      line-height: 1.1em
      margin: 0
      text-align: center
    span
      display: block
      font-size: 15px
      margin: 0
      text-align: center

  h3
    margin-bottom: 1.2em
    text-align: center
    text-transform: uppercase

    &.left-to-study
      font-weight: normal