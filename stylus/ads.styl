.adsense-in-content
  width: 100%
  margin-bottom: 1.5em
  text-align: center

  @media PHONE
    margin-bottom: 16px

  html.seen-survey &
    @media DESKTOP
      width: 336px
    @media DESKTOP_TIGHT
      width: 100%
      margin-bottom: 0
    @media TABLET
      width: 336px
    @media TABLET_TIGHT
      width: 100%
      margin-bottom: 0

.adsense-after-content, .adsense-matched-content, .medianet-after-content
  width: 100%
  margin-bottom: 20px

.adsense-sidebar
  text-align: center
  @media DESKTOP
    width: 336px
  @media TABLET
    width: 160px
  @media PHONE
    width: 100%
    margin-bottom: 20px

.adsense-link-unit-single
  text-align: center

.adsense-link-unit-double
  clearfix()
  .adsense-link-unit-200
    float: left
    width: 50%
    @media PHONE_TIGHT
      float: none

.adsense-link-unit-single, .adsense-link-unit-double
  &:last-child, .after-content &
    margin-bottom: 0

.adsense-link-unit-single .adsbygoogle
  @media DESKTOP
    width: 728px
    height: 15px
  @media TABLET
    width: 728px
    height: 15px
  @media TABLET_TIGHT
    width: 200px
    height: 90px
  @media PHONE
    width: 200px
    height: 90px

.adsense-link-unit-728, .adsense-link-unit-200, .adsense-link-unit-single
  max-width: 100%
  margin-bottom: 1.5em
  overflow: hidden

a.house
  display: block
  background-color: palette('Cyan')
  border: 4px solid palette('Cyan', '700')
  font-size: 2.5em
  font-weight: bold
  line-height: 1.5em
  min-height: 290px
  padding: 40px 20px
  text-align: center
  {LINK}
    color: palette('White')
  {HOVER}
    -webkit-filter: brightness(1.1)
    filter: brightness(1.1)
    text-decoration: none
