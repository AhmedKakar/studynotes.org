.adsense-in-content
  @media DESKTOP
    width: 336px
  @media DESKTOP_TIGHT
    width: 100%
    text-align: center
    margin-bottom: 20px
  @media TABLET
    width: 336px
  @media TABLET_TIGHT
    width: 100%
    text-align: center
    margin-bottom: 20px
  @media PHONE
    width: 100%
    text-align: center
    margin-bottom: 20px

.adsense-after-content, .adsense-matched-content, .medianet-after-content
  width: 100%
  margin-bottom: 20px

.adsense-sidebar
  text-align: center
  @media DESKTOP
    width: 336px
  @media TABLET
    width: 160px
  @media PHONE
    width: 100%
    margin-bottom: 20px

.adsense-link-units
  display: inline-block
  width: 728px
  max-width: 100%
  min-height: 15px
  margin-bottom: 1.5em
  overflow: hidden

  &:last-child
    margin-bottom: 0

a.house
  display: block
  background-color: palette('Cyan')
  border: 4px solid palette('Cyan', '700')
  font-size: 2.5em
  font-weight: bold
  line-height: 1.5em
  min-height: 290px
  padding: 40px 20px
  text-align: center
  {LINK}
    color: palette('White')
  {HOVER}
    -webkit-filter: brightness(1.1)
    filter: brightness(1.1)
    text-decoration: none
