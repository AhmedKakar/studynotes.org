//
// HERO & HERO TABS
//

TAB_HEIGHT = 33px

.heroImage
  display: block
  height: HERO_HEIGHT
  left: 0
  position: absolute
  top: 0
  width: 100%

.hero
  color: #FFF
  display: block
  margin-top: 45px
  margin-bottom: 65px
  text-align: left

  @media PHONE
    margin-left: CONTENT_PADDING_PHONE
  @media TABLET
    margin-left: CONTENT_PADDING_TABLET
  @media DESKTOP
    margin-left: CONTENT_PADDING_DESKTOP

  body.home &
    text-align: center
    margin-left: 0

  a
    {LINK}
      color: #FFF
    {HOVER}
      text-decoration: none

  .title, .desc
    hero_font()
    margin: 0 0 0.3em 0

  .title
    font-size: 3.2em
    font-weight: bold
    text-shadow: 2px 2px 3px rgba(#000, 0.8)

    body.home &
      font-size: 5em

  .desc
    font-size: 1.4em
    text-shadow: 1px 1px 2px rgba(#000, 0.8)

    body.home &
      font-size: 2.2em

ul.tabs
  height: TAB_HEIGHT
  font-size: 16px
  list-style: none
  margin: 0 0 0 6px

  li
    display: inline-block
    margin-right: 2px
    padding: 0

    a
      {LINK}
        background: rgba(GRAY_LIGHTER,0.9)
        border-bottom: none
        border-radius: 6px 6px 0 0
        box-shadow: 0 -2px 2px rgba(0, 0, 0, 0.1)
        color: GRAY_DARKEST
        display: block
        height: TAB_HEIGHT
        padding: 4px 10px 0 10px
        font-weight: bold

      {HOVER}
        background: rgba(GRAY_LIGHTER,1)
        color: BLUE
        text-decoration: none

    &.on a
      {LINK}
        background: #FFF
        border-bottom: 1px solid #FFF
        box-shadow: 0 -2px 2px rgba(0, 0, 0, 0.2)
        height: TAB_HEIGHT + 1
