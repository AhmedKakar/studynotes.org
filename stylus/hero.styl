//
// HERO & HERO TABS
//

TAB_HEIGHT = 35px

.heroImage
  display: block
  height: HERO_HEIGHT
  left: 0
  position: absolute
  top: 0
  width: 100%

  body.home &, body.courses &
    background: url('/images/hero/outdoor-ipad-books.jpg')
    background: bottom left url('/images/hero-body-mask.png') repeat-x, center center linear-gradient(left, rgba(0,0,0,0.2), rgba(0,0,0,0.05)) repeat, center center url('/images/hero/outdoor-ipad-books.jpg') no-repeat
    background-size: auto auto, 100% 100%, cover
  body.course-english &
    background: url('/images/hero/english.jpg')
    background: bottom left url('/images/hero-body-mask.png') repeat-x, center center linear-gradient(left, rgba(0,0,0,0.2), rgba(0,0,0,0.05)) repeat, center center url('/images/hero/english.jpg') no-repeat
    background-size: auto auto, 100% 100%, cover
  body.course-us-government &
    background: url('/images/hero/us-government.jpg')
    background: bottom left url('/images/hero-body-mask.png') repeat-x, center center linear-gradient(left, rgba(0,0,0,0.2), rgba(0,0,0,0.05)) repeat, center center url('/images/hero/us-government.jpg') no-repeat
    background-size: auto auto, 100% 100%, cover
  body.course-us-history &
    background: url('/images/hero/us-history-2.jpg')
    background: bottom left url('/images/hero-body-mask.png') repeat-x, center center linear-gradient(left, rgba(0,0,0,0.2), rgba(0,0,0,0.05)) repeat, center center url('/images/hero/us-history-2.jpg') no-repeat
    background-size: auto auto, 100% 100%, cover
  body.privacy &, body.about &, body.contact &, body.plagiarism &
    background: url('/images/hero/fine-print.jpg')
    background: bottom left url('/images/hero-body-mask.png') repeat-x, center center linear-gradient(left, rgba(0,0,0,0.2), rgba(0,0,0,0.05)) repeat, center center url('/images/hero/fine-print.jpg') no-repeat
    background-size: auto auto, 100% 100%, cover
  body.photo-credits &, body.study-guides &
    background: url('/images/hero/parliament-thames-london.jpg')
    background: bottom left url('/images/hero-body-mask.png') repeat-x, center center linear-gradient(left, rgba(0,0,0,0.2), rgba(0,0,0,0.05)) repeat, center center url('/images/hero/parliament-thames-london.jpg') no-repeat
    background-size: auto auto, 100% 100%, cover
  body.open-source &
    background: url('/images/hero/internet.jpg')
    background: bottom left url('/images/hero-body-mask.png') repeat-x, center center linear-gradient(left, rgba(0,0,0,0.2), rgba(0,0,0,0.05)) repeat, center center url('/images/hero/internet.jpg') no-repeat
    background-size: auto auto, 100% 100%, cover
  body.error &
    background: url('/images/hero/cat-error.gif')
    background: bottom left url('/images/hero-body-mask.png') repeat-x, center center linear-gradient(left, rgba(0,0,0,0.2), rgba(0,0,0,0.05)) repeat, center center url('/images/hero/cat-error.gif') no-repeat
    background-size: auto auto, 100% 100%, cover

.hero
  color: #FFF
  display: block
  margin-top: 50px
  margin-bottom: 60px
  text-align: left

  @media PHONE
    margin-left: CONTENT_PADDING_PHONE
  @media TABLET
    margin-left: CONTENT_PADDING_TABLET
  @media DESKTOP
    margin-left: CONTENT_PADDING_DESKTOP

  body.home &
    text-align: center
    margin-left: 0

  a
    {LINK}
      color: #FFF
    {HOVER}
      text-decoration: none

  .title, .desc
    font-family: HERO_FONT
    text-shadow: 1px 1px 2px rgba(#000, 0.8)
    margin: 0.3em 0
  .title
    font-size: 3.2em
    font-weight: bold
    text-shadow: 2px 2px 3px rgba(#000, 0.8)
    body.home &
      font-size: 5em
  .desc
    font-size: 1.4em
    body.home &
      font-size: 2.2em

ul.tabs
  height: TAB_HEIGHT
  font-size: 16px
  list-style: none
  padding-left: 6px
  z-index: 10

  li
    float: left
    margin-right: 6px
    padding: 0

    a
      {LINK}
        background: rgba(GRAY_LIGHTER,0.9)
        border-bottom: none
        border-radius: 6px 6px 0 0
        box-shadow: 0 -2px 2px rgba(0, 0, 0, 0.1)
        color: GRAY_DARKER
        display: block
        height: TAB_HEIGHT
        padding: 7px 10px 0 10px
        font-weight: bold

      {HOVER}
        background: rgba(GRAY_LIGHTER,1)
        color: BLUE
        text-decoration: none

    &.on a
      {LINK}
        background: #FFF
        border-bottom: 1px solid #FFF
        box-shadow: 0 -2px 2px rgba(0, 0, 0, 0.2)
        height: TAB_HEIGHT + 1
